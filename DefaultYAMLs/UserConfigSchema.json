{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Compiler profiles",
    "type": "object",
    "properties": 
    {
        "PreferredProfile": { "type": "string" },
        "CompilerProfiles": 
        {
            "type": "array",
            "items": 
            {
                "type": "object",
                "properties": 
                {
                    "Name": { "type": "string" },
                    "FileExtensions" : 
                    {
                        "type": "array",
                        "items": { "type":"string" },
                        "uniqueItems": true
                    },
                    "Languages":
                    {
                        "type": "array",
                        "items": { "type":"string" },
                        "uniqueItems": true
                    },
                    "SetupSteps" : 
                    {
                        "type": "array",
                        "items": { "type":"string" }
                    },
                    "ObjectFileExtensions":
                    {
                        "type": "object",
                        "patternProperties":
                        {
                            "^.*$": { "type": "string" }
                        },
                        "additionalProperties": false
                    },
                    "SharedLibraryExtensions":
                    {
                        "type": "object",
                        "patternProperties":
                        {
                            "^.*$": 
                            {
                                "type": "array",
                                "items": { "type":"string" }
                            }
                        },
                        "additionalProperties": false
                    },
                    "StaticLibraryExtensions":
                    {
                        "type": "object",
                        "patternProperties":
                        {
                            "^.*$": 
                            {
                                "type": "array",
                                "items": { "type":"string" }
                            }
                        },
                        "additionalProperties": false
                    },
                    "DebugSymbolFileExtensions":
                    {
                        "type": "object",
                        "patternProperties":
                        {
                            "^.*$": 
                            {
                                "type": "array",
                                "items": { "type":"string" }
                            }
                        },
                        "additionalProperties": false
                    },
                    "Compiler":
                    {
                        "type": "object",
                        "properties": 
                        {
                            "SetupSteps" : 
                            {
                                "type": "array",
                                "items": { "type":"string" }
                            },
                            "Executable": { "type": "string" },
                            "DefaultCompileFlags": { "type": "string" },
                            "CompileArgs": 
                            {
                                "type": "object",
                                "properties": 
                                {
                                    "CompilePart": { "type": "string" },
                                    "IncludePart": { "type": "string" },
                                    "InputPart": { "type": "string" },
                                    "OutputPart": { "type": "string" }
                                },
                                "required": 
                                [
                                    "CompilePart",
                                    "IncludePart",
                                    "InputPart",
                                    "OutputPart"
                                ]
                            }
                        },
                        "required": 
                        [
                            "Executable",
                            "DefaultCompileFlags",
                            "CompileArgs"
                        ]
                    },
                    "Linker":
                    {
                        "type": "object",
                        "properties": 
                        {
                            "SetupSteps" : 
                            {
                                "type": "array",
                                "items": { "type":"string" }
                            },
                            "Executable": { "type": "string" },
                            "DefaultLinkFlags": { "type": "string" },
                            "LinkerArgs": 
                            {
                                "type": "object",
                                "properties": 
                                {
                                    "OutputPart": { "type": "string" },
                                    "DependenciesPart": { "type": "string" }
                                },
                                "required": 
                                [
                                    "OutputPart",
                                    "DependenciesPart"
                                ]
                            }
                        },
                        "required": 
                        [
                            "Executable",
                            "DefaultLinkFlags",
                            "LinkerArgs"
                        ]
                    }
                },
                "required": 
                [
                    "Name", 
                    "FileExtensions", 
                    "ObjectFileExtensions", 
                    "SharedLibraryExtensions", 
                    "StaticLibraryExtensions", 
                    "Compiler", 
                    "Linker"
                ],
                "uniqueItems": true
            }
        }
    },
    "required": ["CompilerProfiles"]
}